{
    "name": "smsi-calendar-back",
    "version": "1.0.0",
    "description": "Backend API for SMSI-Calendar",
    "main": "dist/app.js",
    "scripts": {
        "dev": "tsx watch --env-file=.env.local src/app.ts",
        "build": "tsc",
        "start": "node dist/app.js",
        "db:pull": "prisma db pull",
        "db:generate": "prisma generate",
        "db:studio": "prisma studio",
        "lint": "eslint \"src/**/*.ts\" --max-warnings=0",
        "lint:fix": "eslint \"src/**/*.ts\" --fix --max-warnings=0",
        "format": "prettier --write .",
        "format:check": "prettier --check ."
    },
    "keywords": [
        "fastify",
        "prisma",
        "api",
        "calendar"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@fastify/cookie": "^11.0.1",
        "@fastify/cors": "^10.0.1",
        "@fastify/jwt": "^9.0.1",
        "@fastify/multipart": "^9.3.0",
        "@prisma/client": "^6.1.0",
        "bcryptjs": "^3.0.2",
        "fastify": "^5.2.0",
        "nodemailer": "^7.0.12",
        "rrule": "^2.8.1",
        "zod": "^3.24.1"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/node": "^22.10.2",
        "@types/nodemailer": "^7.0.4",
        "@typescript-eslint/eslint-plugin": "^8.18.2",
        "@typescript-eslint/parser": "^8.18.2",
        "eslint": "^9.17.0",
        "prettier": "^3.4.2",
        "prisma": "^6.1.0",
        "tsx": "^4.19.2",
        "typescript": "^5.7.2"
    },
    "engines": {
        "node": ">=20.0.0"
    }
}